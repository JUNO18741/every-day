import React, { useState } from 'react';

function App() {
  const [count, setCount] = useState(0);
  const [isDestroyed, setIsDestroyed] = useState(false);

  if (isDestroyed) {
    return <button onClick={() => setIsDestroyed(false)}>重建组件</button>;
  }

  return (
    <div>
      <p>Count: {count}</p>
      <button onClick={() => setCount(count + 1)}>加一</button>
      <button onClick={() => setIsDestroyed(true)}>销毁组件</button>
    </div>
  );
}

export default App;
